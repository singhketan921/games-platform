            "value": "{{ADMIN_API_KEY}}"
          },
          {
            "key": "X-TIMESTAMP",
            "value": "{{TIMESTAMP}}"
          },
          {
            "key": "X-NONCE",
            "value": "{{NONCE}}"
          },
          {
            "key": "X-SIGNATURE",
            "value": "{{SIGNATURE}}"
          }
        ],
        "url": {
          "raw": "{{BASE_URL}}/admin/tenants",
          "host": [
            "{{BASE_URL}}"
          ],
          "path": [
            "admin",
            "tenants"
          ]
        }
      }
    },
