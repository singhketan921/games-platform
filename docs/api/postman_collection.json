{
  "info": {
    "name": "Games Platform API",
    "description": "Starter collection for admin + tenant flows.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "OAuth > Client Credentials Token",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Basic {{BASIC_AUTH}}",
            "description": "Optional if you want to inline client_id/client_secret in body"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"grant_type\": \"client_credentials\",\n  \"client_id\": \"{{CLIENT_ID}}\",\n  \"client_secret\": \"{{CLIENT_SECRET}}\",\n  \"scope\": \"wallet:read session:write\"\n}"
        },
        "url": {
          "raw": "{{BASE_URL}}/oauth/token",
          "host": [
            "{{BASE_URL}}"
          ],
          "path": [
            "oauth",
            "token"
          ]
        },
        "description": "Request a bearer token for service-to-service calls. If Authorization header is present, client_id/client_secret in the body are optional."
      }
    },
    {
